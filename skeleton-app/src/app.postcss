@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
  @apply h-full overflow-hidden;
}

.cRouteBodyStyle {
  @apply flex flex-col items-center justify-center space-y-4;
}

.cTitlePartStyle {
  @apply m-2 md:my-4;
}

.cTitleStyle {
  @apply font-bold text-2xl md:!text-3xl;
}

.cContentPartStyle {
  @apply flex flex-col items-center space-y-4 m-4;
}
